#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_configure:
	perl -pi -e 's|^(prefix)=(.+)$$|$$1=/usr|' Makefile

override_dh_auto_clean:
	# Automatic `make distclean` clears Unicode table that is needed for build.
	make clean
